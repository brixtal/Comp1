{
	double numero, i, aux, resultado;
	i = 0;
	resultado = 10;
	aux = 1;
	while (i<100)
	{
		printf("pi/4 e igual a:\n");
		valor = (aux +2) * (-1);
		soma += (valor * exp(10,-1);
